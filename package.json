{
  "name": "with-typescript",
  "version": "1.0.0",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "npm run -s lint:style && npm run -s lint:es",
    "lint:es:fix": "eslint --fix '**/*.{js,jsx,ts,tsx}'",
    "lint:es": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "npm run -s lint:style:fix && npm run -s lint:es:fix",
    "lint:style": "stylelint '**/*.{css,less,sass,scss}'",
    "lint:style:fix": "stylelint --fix '**/*.{css,less,sass,scss}'",
    "lint:prettier": "prettier --ignore-path .gitignore '**/*.{js,jsx,ts,tsx}'",
    "lint:prettier:fix": "prettier --write --ignore-path .gitignore '**/*.{js,jsx,ts,tsx}'",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "preinstall": "typesync || :",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "^13.4.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@next/eslint-plugin-next": "^13.4.12",
    "@types/eslint": "^8.44.1",
    "@types/node": "^20.4.6",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.46.0",
    "eslint-config-next": "^13.4.12",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.27",
    "prettier": "^3.0.1",
    "stylelint": "^15.10.2",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-order": "^6.0.3",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6"
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "bash -c 'npm run type-check'"
    ],
    "*.{css,scss}": "stylelint --fix",
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write",
    "*.js": "eslint --cache --fix",
    "*.css": "stylelint --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
