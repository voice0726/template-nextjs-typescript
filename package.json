{
  "name": "with-typescript",
  "version": "1.0.0",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "npm run -s lint:style && npm run -s lint:es",
    "lint:es:fix": "eslint --fix '**/*.{js,jsx,ts,tsx}'",
    "lint:es": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "npm run -s lint:style:fix && npm run -s lint:es:fix",
    "lint:style": "stylelint '**/*.{css,less,sass,scss}'",
    "lint:style:fix": "stylelint --fix '**/*.{css,less,sass,scss}'",
    "lint:prettier": "prettier --ignore-path .gitignore '**/*.{js,jsx,ts,tsx}'",
    "lint:prettier:fix": "prettier --write --ignore-path .gitignore '**/*.{js,jsx,ts,tsx}'",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "preinstall": "typesync || :",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "^12.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@next/eslint-plugin-next": "^12.2.2",
    "@types/eslint": "^8.4.5",
    "@types/node": "^16.11.10",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.20.0",
    "eslint-config-next": "^12.2.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-order": "^5.0.0",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.7.4"
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "bash -c 'npm run type-check'"
    ],
    "*.{css,scss}": "stylelint --fix",
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write",
    "*.js": "eslint --cache --fix",
    "*.css": "stylelint --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
